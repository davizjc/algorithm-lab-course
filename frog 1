#include <iostream>
#include <vector>

using namespace std;

int main()
{
  int n;
  cin >> n;  // number of stone 

  vector <int> height(n + 1, 0); // height 
  for(int i = 1; i <= n; i++) {
    cin >> height[i];
    }

  vector <int> minimum_cost(n + 1);
  minimum_cost[2] = abs(height[2] - height[1]); // stone number 3 

  
  for(int i = 3; i <= n; i++) {
  minimum_cost[i] = min(
  minimum_cost[i - 1] + abs(height[i] - height[i - 1]),
  minimum_cost[i - 2] + abs(height[i] - height[i - 2]));
  }
  // pick min of moving two step then one or one then two 
   
  cout << minimum_cost[n];
    return 0;
}


