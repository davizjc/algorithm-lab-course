#include <iostream>
#include <vector>

using namespace std;

void dp(char grid[1000][1000], int row, int col){
  int dp[1000][1000] ; 
	int MOD = (int) (1e9 + 7);
	dp[0][0] = 1;
	for (int i = 0; i < row; i++) {
	  for (int j = 0; j < col; j++) {
		  if (grid[i][j] == '#') {
			dp[i][j] = 0;
			continue; 
      } 
		  if (i > 0) 
			  dp[i][j] = (dp[i][j] + dp[i - 1][j]) % MOD;
		  if (j > 0) 
			  dp[i][j] = (dp[i][j] + dp[i][j - 1]) % MOD;
		}
	}
		cout << (dp[row - 1][col - 1]); 
	}

int main()
{
  int row,col;
  cin >> row >> col;  // number of stone 
  char grid[1000][1000];
  for(int i=0;i<row;i++)
    {
        for(int j=0;j<col;j++)
        {
            cin>>grid[i][j];
        }
    }
  dp(grid,row,col);
}


